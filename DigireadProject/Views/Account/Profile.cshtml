@model DigireadProject.Models.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "פרטי משתמש";
}

<div class="container">
    <h2 class="text-center mb-4">פרטי משתמש</h2>

    @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { id = "profileForm", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Username, "שם משתמש")
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "אימייל")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>תאריך הרשמה</label>
                    <input type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd/MM/yyyy")" readonly>
                </div>

                <div class="form-group">
                    <label>סוג משתמש</label>
                    <input type="text" class="form-control" value="@(Model.IsAdmin ? "מנהל" : "משתמש רגיל")" readonly>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentPassword, "סיסמה נוכחית")
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "הזן סיסמה נוכחית אם ברצונך לשנות סיסמה" })
                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, "סיסמה חדשה")
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "סיסמה חדשה (אופציונלי)" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmNewPassword, "אימות סיסמה חדשה")
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", placeholder = "אימות סיסמה חדשה" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">עדכן פרטים</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            $("#profileForm").on("submit", function(e) {
                e.preventDefault();
                $.ajax({
                    url: this.action,
                    method: this.method,
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            // הודעת הצלחה וניווט לדף הבית
                            alert("הפרטים עודכנו בהצלחה!");
                            window.location.href = "@Url.Action("HomePage", "Home")";
                        } else {
                            // הצגת הודעת שגיאה
                            alert(response.error || "אירעה שגיאה בעדכון הפרטים");
                        }
                    },
                    error: function() {
                        alert("אירעה שגיאה בתקשורת עם השרת");
                    }
                });
            });
        });
    </script>
}