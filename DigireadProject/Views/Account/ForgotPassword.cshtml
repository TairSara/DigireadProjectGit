@model DigireadProject.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "שכחתי סיסמה";
}

<h2 class="text-center">שחזור סיסמה</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group text-center">
            <div class="col-md-6 col-md-offset-3">
                @Html.LabelFor(m => m.Email, "הזן כתובת דוא\"ל", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required", placeholder = "example@gmail.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-6 col-md-offset-3">
                <p class="info-message">
                    <i class="fas fa-info-circle"></i>
                    שים לב: קישור לאיפוס סיסמה יישלח רק לכתובת מייל הרשומה למשתמש קיים במערכת
                </p>
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-6 col-md-offset-3">
                <button type="submit" class="btn btn-primary">שלח קישור לאיפוס סיסמה</button>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="form-group text-center">
                <div class="col-md-6 col-md-offset-3">
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        @TempData["ErrorMessage"]
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .info-message {
        font-size: 14px;
        margin-bottom: 15px;
        padding: 12px;
        background-color: #f8f9fa;
        border: 1px solid #e2e3e5;
        border-radius: 4px;
        color: #383d41;
        text-align: right;
        direction: rtl;
    }

        .info-message i {
            margin-left: 8px;
            color: #17a2b8;
            float: right;
        }

    .error-message {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 12px;
        margin-top: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        text-align: right;
        direction: rtl;
    }

        .error-message i {
            margin-left: 8px;
            color: #dc3545;
            float: right;
        }

    .validation-message {
        text-align: right;
        direction: rtl;
        display: block;
        margin-top: 5px;
    }
</style>