<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Digital Books</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        /* Background Elements */
        .background-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #a855f7, #7dd3fc);
            z-index: -2;
            overflow: hidden;
        }

        .circle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(45deg, rgba(168, 85, 247, 0.4), rgba(125, 211, 252, 0.4));
            filter: blur(60px);
            z-index: -1;
        }

        .circle-1 {
            width: 600px;
            height: 600px;
            top: -200px;
            right: -100px;
            transform: rotate(-15deg);
        }

        .circle-2 {
            width: 500px;
            height: 500px;
            bottom: -150px;
            left: -100px;
            transform: rotate(30deg);
            background: linear-gradient(45deg, rgba(125, 211, 252, 0.4), rgba(168, 85, 247, 0.4));
        }

        .circle-3 {
            width: 300px;
            height: 300px;
            top: 40%;
            right: 25%;
            transform: rotate(15deg);
            background: linear-gradient(45deg, rgba(255, 255, 255, 0.2), rgba(168, 85, 247, 0.3));
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            right: 0;
            background: linear-gradient(to bottom, #8B5CF6, #3B82F6);
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
            z-index: 1000;
            box-shadow: -2px 0 5px rgba(0,0,0,0.2);
        }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: flex;
                align-items: center;
                transition: 0.3s;
                white-space: nowrap;
                direction: rtl;
            }

                .sidebar a i {
                    margin-left: 10px;
                    font-size: 20px;
                    color: #FFDAB9;
                    transition: 0.3s;
                }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

                    .sidebar a:hover i {
                        color: white;
                    }

            .sidebar .close-btn {
                position: absolute;
                top: 15px;
                left: 25px;
                font-size: 30px;
                cursor: pointer;
                color: white;
            }

        /* Overlay */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
            transition: 0.3s;
        }

        /* Toggle Button */
        .menu-toggle {
            position: fixed;
            top: 15px;
            right: 15px;
            background: linear-gradient(to right, #8B5CF6, #3B82F6);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            z-index: 998;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            transition: 0.3s;
        }

            .menu-toggle:hover {
                transform: scale(1.05);
            }

        /* Main Content */
        .container.body-content {
            max-width: 900px;
            margin: 50px auto;
            padding: 40px;
            position: relative;
            z-index: 1;
        }

        /* Homepage specific styles */
        .welcome-section {
            text-align: center;
            color: white;
            padding: 100px 0;
        }

            .welcome-section h1 {
                font-size: 3.5rem;
                margin-bottom: 1rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            }

            .welcome-section p {
                font-size: 1.8rem;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            }

        .featured-books {
            color: white;
            text-align: center;
            padding: 50px 0;
        }

            .featured-books h2 {
                font-size: 2.5rem;
                margin-bottom: 2rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background: transparent;
            margin-top: 30px;
            border-radius: 10px;
            color: white;
        }

        /* Non-homepage container styles */
        .container.body-content:not(.home-page) {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.1);
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    <!-- Background Elements -->
    <div class="background-wrapper">
        <div class="circle circle-1"></div>
        <div class="circle circle-2"></div>
        <div class="circle circle-3"></div>
    </div>

    <!-- Menu Toggle Button -->
    <button class="menu-toggle" onclick="toggleNav()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Overlay -->
    <div class="overlay" id="overlay" onclick="toggleNav()"></div>

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <span class="close-btn" onclick="toggleNav()">&times;</span>
        <a href="@Url.Action("HomePage", "Home")">
            <i class="fas fa-home"></i> דף הבית
        </a>
        <a href="@Url.Action("Login", "Account")">
            <i class="fas fa-sign-in-alt"></i> התחברות
        </a>
        <a href="@Url.Action("Register", "Account")">
            <i class="fas fa-user-plus"></i> הרשמה
        </a>
        <a href="@Url.Action("Logout", "Account")">
            <i class="fas fa-sign-out-alt"></i> התנתקות
        </a>
        <a href="@Url.Action("Profile", "Account")">
            <i class="fas fa-user-circle"></i> פרופיל אישי
        </a>
        <a href="@Url.Action("MainGallery", "BookManagement")">
            <i class="fas fa-book"></i> גלריית ספרים
        </a>
        <a href="@Url.Action("Cart", "ShoppingCart")">
            <i class="fas fa-cart-plus"></i> עגלה
        </a>
    </div>

    <div class="container body-content @(ViewBag.Title == "דף הבית" ? "home-page" : "")">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Digital Books</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function toggleNav() {
            var sidebar = document.getElementById("mySidebar");
            var overlay = document.getElementById("overlay");

            if (sidebar.style.width === "250px") {
                sidebar.style.width = "0";
                overlay.style.display = "none";
            } else {
                sidebar.style.width = "250px";
                overlay.style.display = "block";
            }
        }
    </script>
</body>
</html>