<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Digital Books</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        /* Background Elements */
        .background-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #E6F3FF, #F0F8FF);
            z-index: -2;
            overflow: hidden;
        }

        .floating-book {
            position: fixed;
            color: rgba(70, 130, 180, 0.1);
            z-index: -1;
            animation: float 20s linear infinite;
            pointer-events: none;
        }

        /* Navbar Styles */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(100, 150, 200, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 30px;
            z-index: 1000;
            box-shadow: 0 2px 15px rgba(0,0,0,0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .nav-link {
            text-decoration: none;
            color: #ffffff;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 12px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

            .nav-link i {
                font-size: 18px;
                color: #ffffff;
            }

            .nav-link:hover i {
                color: #ffffff;
            }

        /* Mobile Menu */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: #ffffff;
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
        }

        /* Mobile Navigation */
        .mobile-nav {
            display: none;
            position: fixed;
            top: 70px;
            left: 0;
            right: 0;
            background: rgba(100, 150, 200, 0.95);
            backdrop-filter: blur(10px);
            padding: 20px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.2);
            z-index: 999;
        }

            .mobile-nav .nav-link {
                padding: 15px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

        /* Main Content */
        .container.body-content {
            max-width: 900px;
            margin: 50px auto;
            padding: 40px;
            padding-top: 100px;
            position: relative;
            z-index: 1;
        }

        /* Homepage specific styles */
        .welcome-section {
            text-align: center;
            color: #2B5F9E;
            padding: 100px 0;
        }

            .welcome-section h1 {
                font-size: 3.5rem;
                margin-bottom: 1rem;
                text-shadow: 1px 1px 2px rgba(43, 95, 158, 0.2);
            }

            .welcome-section p {
                font-size: 1.8rem;
                text-shadow: 1px 1px 2px rgba(43, 95, 158, 0.2);
            }

        .featured-books {
            color: #2B5F9E;
            text-align: center;
            padding: 50px 0;
        }

            .featured-books h2 {
                font-size: 2.5rem;
                margin-bottom: 2rem;
                text-shadow: 1px 1px 2px rgba(43, 95, 158, 0.2);
            }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background: transparent;
            margin-top: 30px;
            border-radius: 10px;
            color: #2B5F9E;
        }

        /* Non-homepage container styles */
        .container.body-content:not(.home-page) {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(176, 216, 255, 0.2);
            backdrop-filter: blur(10px);
        }

      
    </style>
</head>
<body>
    <div class="background-wrapper"></div>
    <div id="background-books"></div>

    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-links">
            <a href="@Url.Action("HomePage", "Home")" class="nav-link">
                <i class="fas fa-home"></i>
                <span>דף הבית</span>
            </a>
            <a href="@Url.Action("Login", "Account")" class="nav-link">
                <i class="fas fa-sign-in-alt"></i>
                <span>התחברות</span>
            </a>
            <a href="@Url.Action("Register", "Account")" class="nav-link">
                <i class="fas fa-user-plus"></i>
                <span>הרשמה</span>
            </a>
            <a href="@Url.Action("Profile", "Account")" class="nav-link">
                <i class="fas fa-user-circle"></i>
                <span>פרופיל אישי</span>
            </a>
            <a href="@Url.Action("MainGallery", "BookManagement")" class="nav-link">
                <i class="fas fa-book"></i>
                <span>גלריית ספרים</span>
            </a>
            <a href="@Url.Action("Cart", "ShoppingCart")" class="nav-link">
                <i class="fas fa-cart-plus"></i>
                <span>עגלה</span>
            </a>
            <a href="@Url.Action("MyLibrary", "BookManagement")" class="nav-link">
                <i class="fas fa-book-reader"></i>
                <span>הספרייה שלי</span>
            </a>
            <a href="@Url.Action("MyWaitList", "BookManagement")" class="nav-link">
                <i class="fas fa-list-alt"></i>
                <span>רשימת המתנה</span>
            </a>
            <a href="@Url.Action("Logout", "Account")" class="nav-link">
                <i class="fas fa-sign-out-alt"></i>
                <span>התנתקות</span>
            </a>
        </div>

        <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
            <i class="fas fa-bars"></i>
        </button>
    </nav>

    <!-- Mobile Navigation -->
    <div class="mobile-nav">
        <a href="@Url.Action("HomePage", "Home")" class="nav-link">
            <i class="fas fa-home"></i>
            <span>דף הבית</span>
        </a>
        <a href="@Url.Action("Login", "Account")" class="nav-link">
            <i class="fas fa-sign-in-alt"></i>
            <span>התחברות</span>
        </a>
        <a href="@Url.Action("Register", "Account")" class="nav-link">
            <i class="fas fa-user-plus"></i>
            <span>הרשמה</span>
        </a>
        <a href="@Url.Action("Profile", "Account")" class="nav-link">
            <i class="fas fa-user-circle"></i>
            <span>פרופיל אישי</span>
        </a>
        <a href="@Url.Action("MainGallery", "BookManagement")" class="nav-link">
            <i class="fas fa-book"></i>
            <span>גלריית ספרים</span>
        </a>
        <a href="@Url.Action("Cart", "ShoppingCart")" class="nav-link">
            <i class="fas fa-cart-plus"></i>
            <span>עגלה</span>
        </a>
        
        <a href="@Url.Action("MyLibrary", "BookManagement")" class="nav-link"> 
            <i class="fas fa-book-reader"></i>
            <span>הספרייה שלי</span>
        </a>
        <a href="@Url.Action("MyWaitList", "BookManagement")" class="nav-link">
            <i class="fas fa-list-alt"></i>
            <span>רשימת המתנה</span>
        </a>
        <a href="@Url.Action("Logout", "Account")" class="nav-link">
            <i class="fas fa-sign-out-alt"></i>
            <span>התנתקות</span>
        </a>
    </div>

    <div class="container body-content @(ViewBag.Title == "דף הבית" ? "home-page" : "")">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Digital Books</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function createFloatingBook() {
            const book = document.createElement('i');
            book.className = 'fas fa-book floating-book';

            const startX = Math.random() * window.innerWidth;
            const startY = Math.random() * window.innerHeight;

            const moveX = (Math.random() - 0.5) * 300;
            const moveY = (Math.random() - 0.5) * 300;
            const rotate = (Math.random() - 0.5) * 180;

            const size = 20 + Math.random() * 30;

            book.style.cssText = `
                        left: ${startX}px;
                        top: ${startY}px;
                        font-size: ${size}px;
                        --moveX: ${moveX}px;
                        --moveY: ${moveY}px;
                        --rotate: ${rotate}deg;
                        animation-duration: ${15 + Math.random() * 10}s;
                    `;

            document.getElementById('background-books').appendChild(book);

            book.addEventListener('animationend', () => {
                book.remove();
            });
        }

        setInterval(createFloatingBook, 2000);

        // Create initial books
        for (let i = 0; i < 10; i++) {
            createFloatingBook();
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileNav = document.querySelector('.mobile-nav');
            mobileNav.classList.toggle('active');
        }
    </script>
</body>
</html>